@article{Ribas2007a,
  title = {The Eccentricity-Mass Distribution of Exoplanets: {{Signatures}} of Different Formation Mechanisms?},
  author = {Ribas, I. and {Miralda-Escud{\'e}}, J.},
  year = {2007},
