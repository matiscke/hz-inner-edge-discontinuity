@article{Mayor2011b,
  title = {The {{HARPS}} Search for Southern Extra-Solar Planets {{XXXIV}}. {{Occurrence}}, Mass Distribution and Orbital Properties of Super-{{Earths}} and {{Neptune-mass}} Planets},
  author = {Mayor, M. and Marmier, M. and Lovis, C. and Udry, S. and S{\'e}gransan, D. and Pepe, F. and Benz, W. and Bertaux, J. -L. and Bouchy, F. and Dumusque, X. and Curto, G. Lo and Mordasini, C. and Queloz, D. and Santos, N. C.},
