@article{Marino2021a,
  title = {Constraining Planetesimal Stirring: How Sharp Are Debris Disc Edges?},
  author = {Marino, Sebastian},
  year = {2021},
  journal = {Monthly Notices of the Royal Astronomical Society},
  volume = {15},
