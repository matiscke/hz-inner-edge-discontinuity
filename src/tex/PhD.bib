@article{Jin2018a,
  title = {Compositional {{Imprints}} in {{Density}}\textendash{{Distance}}\textendash{{Time}}: {{A Rocky Composition}} for {{Close-in Low-mass Exoplanets}} from the {{Location}} of the {{Valley}} of {{Evaporation}}},
