@article{Kanagawa2016a,
  title = {Mass Constraint for a Planet in a Protoplanetary Disk from the Gap Width},
  author = {Kanagawa, Kazuhiro D. and Muto, Takayuki and Tanaka, Hidekazu and Tanigawa, Takayuki and Takeuchi, Taku and Tsukagoshi, Takashi and Momose, Munetake},
