@article{Isella2007a,
  title = {Millimeter Imaging of {{HD}} 163296: Probing the Disk Structure and Kinematics},
  author = {Isella, Andrea and Testi, Leonardo and Natta, Antonella and Neri, R. and Wilner, David and Qi, C.},
