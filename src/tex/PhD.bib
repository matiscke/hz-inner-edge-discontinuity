}

@article{Pont2011a,
  title = {Determining Eccentricities of Transiting Planets: {{A}} Divide in the Mass-Period Plane},
  author = {Pont, Fr{\'e}d{\'e}ric and Husnoo, Nawal and Mazeh, Tsevi and Fabrycky, Daniel},
