@article{Tripathi2017a,
  title = {A Millimeter {{Continuum Size}}\textendash{{Luminosity Relationship}} for {{Protoplanetary Disks}}},
  author = {Tripathi, Anjali and Andrews, Sean M. and Birnstiel, Tilman and Wilner, David J.},
