@article{Hwang2021a,
  title = {Systematic {{KMTNet Planetary Anomaly Search}}, {{Paper II}}: {{Five New}} \$q\textbackslash textless2\textbackslash backslashtimes 10\^\{-4\}\$ {{Mass-ratio Planets}}},
  author = {Hwang, Kyu-Ha and Zang, Weicheng and Gould, Andrew and Udalski, Andrzej and Bond, Ian A. and Yang, Hongjing and Mao, Shude and Albrow, Michael D. and Chung, Sun-Ju and Han, Cheongho and Jung, Youn Kil and Ryu, Yoon-Hyun and Shin, In-Gu and Shvartzvald, Yossi and Yee, Jennifer C. and Cha, Sang-Mok and Kim, Dong-Jin and Kim, Hyoun-Woo and Kim, Seung-Lee and Lee, Chung-Uk and Lee, Dong-Joo and Lee, Yongseok and Park, Byeong-Gon and Pogge, Richard W. and Mr{\'o}z, Przemek and Poleski, Radek and Skowron, Jan and Szyma{\'n}ski, Michal K. and Soszy{\'n}ski, Igor and Pietrukowicz, Pawel and Kozlowski, Szymon and Ulaczyk, Krzysztof and Rybicki, Krzysztof A. and Iwanek, Patryk and Wrona, Marcin and Gromadzki, Mariusz and Abe, Fumio and Barry, Richard and Bennett, David P. and Bhattacharya, Aparna and Fujii, Hirosame and Fukui, Akihiko and Hirao, Yuki and Itow, Yoshitaka and Kirikawa, Rintaro and Kondo, Iona and Koshimoto, Naoki and Munford, Brandon and Matsubara, Yutaka and Miyazaki, Shota and Muraki, Yasushi and Olmschenk, Greg and Ranc, Cl{\'e}ment and Rattenbury, Nicholas J. and Satoh, Yuki K. and Shoji, Hikaru and Silva, Stela Ishitani and Sumi, Takahiro and Suzuki, Daisuke and Tristram, Paul J. and Yonehara, Atsunori and Zhang, Xiangyu and Zhu, Wei and Penny, Matthew T. and Fouqu{\'e}, Pascal},
  year = {2021},
  pages = {1--58},
  abstract = {We apply the automated AnomalyFinder algorithm of Paper I (Zang et al. 2021b) to 2018-2019 light curves from the \$\textbackslash backslashsimeq 13\textbackslash backslash,\{\textbackslash backslashrm deg\}\^2\$ covered by the six KMTNet prime fields, with cadences \$\textbackslash backslashGamma \textbackslash backslashgeq 2\textbackslash backslash,\{\textbackslash backslashrm hr\}\^\{-1\}\$. We find a total of 10 planets with mass ratios \$q\textbackslash textless2\textbackslash backslashtimes 10\^\{-4\}\$, including five newly discovered planets, one planet that was reported in Paper I, and recovery of four previously discovered planets. One of the new planets, OGLE-2018-BLG-0977Lb, is in a planetary-caustic event, while the other four (OGLE-2018-BLG-0506Lb, OGLE-2018-BLG-0516Lb, OGLE-2019-BLG-1492Lb, and KMT-2019-BLG-0253) are revealed by a ``dip'' in the light curve as the source crosses the host-planet axis on the opposite side of the planet. These subtle signals were missed in previous by-eye searches. The planet-host separations (scaled to the Einstein radius), \$s\$, and planet-host mass ratios, \$q\$, are, respectively, \$(s,q\textbackslash backslashtimes 10\^5) = (0.88, 4.1)\$, \$(0.96\textbackslash backslashpm 0.10, 8.3)\$, \$(0.94\textbackslash backslashpm 0.07, 13)\$, \$(0.97\textbackslash backslashpm 0.07, 18)\$, and \$(0.97\textbackslash backslashpm0.04,4.1)\$, where the ``\$\textbackslash backslashpm\$'' indicates a discrete degeneracy. The ten planets are spread out over the range \$-5\textbackslash textless\textbackslash backslashlog q \textbackslash textless -3.7\$. Together with the two planets previously reported with \$q\textbackslash backslashsim 10\^\{-5\}\$ from the 2018-2019 non-prime KMT fields, this result suggests that planets toward the bottom of this mass-ratio range may be more common than previously believed.},
