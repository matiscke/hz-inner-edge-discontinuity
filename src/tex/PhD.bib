  author = {Thiabaud, Amaury and Marboeuf, Ulysse and Alibert, Yann and Cabral, Nahuel and Leya, Ingo and Mezger, Klaus},
  year = {2014},
  journal = {Astronomy \& Astrophysics},
  volume = {562},
