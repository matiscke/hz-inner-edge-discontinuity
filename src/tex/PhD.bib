@article{Eylen2019,
  title = {The {{Orbital Eccentricity}} of {{Small Planet Systems}}},
  author = {Eylen, Vincent Van and Albrecht, Simon and Huang, Xu and MacDonald, Mariah G. and Dawson, Rebekah I. and Cai, Maxwell X. and {Foreman-Mackey}, Daniel and Lundkvist, Mia S. and Aguirre, Victor Silva and Snellen, Ignas and Winn, Joshua N.},
  year = {2019},
  month = jul,
  journal = {The Astronomical Journal},
  volume = {157},
