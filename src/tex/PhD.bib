@article{Hartmann1998a,
  title = {Accretion and the {{Evolution}} of {{T Tauri Disks}}},
  author = {Hartmann, Lee and Calvet, Nuria and Gullbring, Erik and D'Alessio, Paola},
  year = {1998},
  month = mar,
