}

@article{ZhengZhengXiaoChen2017,
  title = {Planetesimal {{Clearing}} and {{Size-dependent Asteroid Retention}} by {{Secular Resonance Sweeping}} during the {{Depletion}} of the {{Solar Nebula}}},
  author = {Zheng(), Xiaochen and Lin(), Douglas N. C. and Kouwenhoven(, M. B. N.},
