  author = {Santos, N. C. and Adibekyan, V. and Dorn, C. and Mordasini, C. and Noack, L. and Barros, S. C. C. and {Delgado-Mena}, E. and Demangeon, O. and Faria, J. and Israelian, G. and Sousa, S. G.},
