@article{Mordasini2009c,
  title = {Extrasolar Planet Population Synthesis: {{II}}. {{Statistical}} Comparison with Observations},
  author = {Mordasini, C and Alibert, Y and Benz, W and Naef, D},
  year = {2009},
  journal = {Astronomy and Astrophysics},
