@article{Debras2020a,
  title = {Revisiting Migration in a Disc Cavity to Explain the High Eccentricities of Warm {{Jupiters}}},
  author = {Debras, Florian and Baruteau, Cl{\'e}ment and Donati, Jean-Fran{\c c}ois},
