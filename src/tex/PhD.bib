@article{Adams2006a,
  title = {Long-{{Term Evolution}} of {{Close Planets Including}} the {{Effects}} of {{Secular Interactions}}},
  author = {Adams, Fred C. and Laughlin, Gregory},
  year = {2006},
  month = oct,
  journal = {The Astrophysical Journal},
  volume = {649},
  number = {2},
  pages = {1004--1009},
  issn = {0004-637X},
  doi = {10.1086/506145},
  abstract = {This paper studies the long-term evolution of planetary systems containing short-period planets, including the effects of tidal circularization, secular excitation of eccentricity by companion planets, and stellar damping. For planetary systems subject to all of these effects, analytic solutions (or approximations) are presented for the time evolution of the semimajor axes and eccentricities. Secular interactions enhance the inward migration and accretion of hot Jupiters, while general relativity tends to act in opposition by reducing the effectiveness of the secular perturbations. The analytic solutions presented herein allow us to understand these effects over a wide range of parameter space and to isolate the effects of general relativity in these planetary systems.},
  keywords = {dynamics,tides}
}

@article{Adams2020a,
  title = {Ultra {{Short Period Planets}} in {{K2 III}}: {{Neighbors}} Are {{Common}} with 12 {{New Multi-Planet Systems}} and 26 {{Newly Validated Planets}} in {{Campaigns}} 0-8, 10},
  author = {Adams, Elisabeth R. and Jackson, Brian and Johnson, Samantha and Ciardi, David R. and Cochran, William D. and Endl, Michael and Everett, Mark E. and Furlan, Elise and Howell, Steve B. and Jayanthi, Prasanna and MacQueen, Phillip J. and Matson, Rachel A. and {Partyka-Worley}, Ciera and Schlieder, Joshua and Scott, Nicholas J. and Stanton, Sevio M. and Ziegler, Carl},
  year = {2020},
  abstract = {Using the EVEREST photometry pipeline, we have identified 74 candidate ultra-short-period planets (orbital period P\textbackslash textless1 d) in the first half of the K2 data (Campaigns 0-8 and 10). Of these, 33 candidates have not previously been reported. A systematic search for additional transiting planets found 12 new multi-planet systems, double the current number and representing a third (31\%) of USPs. The companions have periods from 1.4 to 31 days (median 5.5 d). Half (50 of 102) of the candidate USPs and companions have been statistically validated or confirmed, 22 for the first time in this work, including 13 USPs. Almost all candidates, and all validated planets, are small (radii Rp\textbackslash textless=3 R\_E) with a median radius of R\_p=1.1 R\_E; the validated and confirmed candidates have radii between 0.4 R\_E and 2.4 R\_E and periods from P=0.18 to 0.96 d. The lack of candidate (a) ultra-hot-Jupiters (R\_p\textbackslash textgreater10) and (b) short-period desert (3\textbackslash textless=Rp\textbackslash textless=10) planets suggests that both populations are rare. These results also provide strong evidence that we have not reached a lower planetary radius limit for planets at close proximity to a star, and suggest that additional improvements in photometry techniques would yield yet more ultra-short-period planets. The large fraction of USPs in known multi-planet systems supports origins models that involve dynamical interactions with exterior planets coupled to tidal decay of the USP orbits.},
  keywords = {USPs},
  annotation = {\_eprint: 2011.11698},
  file = {/Users/schlecker/papers/PhD/Adams2020a.pdf}
}

@article{Adams2021a,
  title = {A {{Theoretical Framework}} for the {{Mass Distribution}} of {{Gas Giant Planets}} Forming through the {{Core Accretion Paradigm}}},
  author = {Adams, Fred C and Meyer, Michael R and Adams, Arthur D},
  year = {2021},
  pages = {1--29},
  abstract = {This paper constructs a theoretical framework for calculating the distribution of masses for gas giant planets forming via the core accretion paradigm. Starting with known properties of circumstellar disks, we present models for the planetary mass distribution over the range \$0.1M\_J \textbackslash textless M\_\{\textbackslash backslashrm p\} \textbackslash textless 10M\_J\$. If the circumstellar disk lifetime is solely responsible for the end of planetary mass accretion, the observed (nearly) exponential distribution of disk lifetime would imprint an exponential fall-off in the planetary mass function. This result is in apparent conflict with observations, which suggest that the mass distribution has a (nearly) power-law form \$dF/dM\_\{\textbackslash backslashrm p\}\textbackslash backslashsim M\_\{\textbackslash backslashrm p\}\^\{-p\}\$, with index \$p\textbackslash backslashapprox1.3\$, over the relevant planetary mass range (and for stellar masses \$\textbackslash backslashsim0.5-2M\_\textbackslash backslashodot\$). The mass accretion rate onto the planet depends on the fraction of the (circumstellar) disk accretion flow that enters the Hill sphere, and on the efficiency with which the planet captures the incoming material. Models for the planetary mass function that include distributions for these efficiencies, with uninformed priors, can produce nearly power-law behavior, consistent with current observations. The disk lifetimes, accretion rates, and other input parameters depend on the mass of the host star. We show how these variations lead to different forms for the planetary mass function for different stellar masses. Compared to stars with masses \$M\_\textbackslash backslashast\$ = \$0.5-2M\_\textbackslash backslashodot\$, stars with smaller masses are predicted to have a steeper planetary mass function (fewer large planets).},
  keywords = {coreaccretion,giants},
  annotation = {\_eprint: 2101.06714},
  file = {/Users/schlecker/papers/PhD/Adams2021a.pdf}
}

@article{Addison2020b,
