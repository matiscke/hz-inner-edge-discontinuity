  author = {Santos, N. C. and Mortier, A. and Faria, J. P. and Dumusque, X. and Adibekyan, V. Zh. and {Delgado-Mena}, E. and Figueira, P. and Benamati, L. and Boisse, I. and Cunha, D. and Gomes Da Silva, J. and Lo Curto, G. and Lovis, C. and Martins, J. H.C. and Mayor, M. and Melo, C. and Oshagh, M. and Pepe, F. and Queloz, D. and Santerne, A. and Segransan, D. and Sozzetti, A. and Sousa, S. G. and Udry, S.},
