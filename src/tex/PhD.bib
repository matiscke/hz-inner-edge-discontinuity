@article{Espinoza2018a,
  title = {Efficient {{Joint Sampling}} of {{Impact Parameters}} and {{Transit Depths}} in {{Transiting Exoplanet Light Curves}}},
  author = {Espinoza, N{\'e}stor},
  year = {2018},
