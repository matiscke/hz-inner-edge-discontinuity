@article{Zhu2018,
  title = {About 30\% of {{Sun-like Stars Have Kepler-like Planetary Systems}}: {{A Study}} of Their {{Intrinsic Architecture}}},
  author = {Zhu, Wei and Petrovich, Cristobal and Wu, Yanqin and Dong, Subo and Xie, Jiwei},
  year = {2018},
