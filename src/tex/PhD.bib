@article{Manara2019a,
  title = {Constraining Disk Evolution Prescriptions of Planet Population Synthesis Models with Observed Disk Masses and Accretion Rates},
  author = {Manara, C. F. and Mordasini, C. and Testi, L. and Williams, J. P. and Miotello, A. and Lodato, G. and Emsenhuber, A.},
  year = {2019},
  journal = {Astronomy \& Astrophysics},
  volume = {631},
  number = {2017},
