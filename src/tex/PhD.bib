@article{Suzuki2016,
  title = {{{THE EXOPLANET MASS-RATIO FUNCTION FROM THE MOA-II SURVEY}}: {{DISCOVERY OF A BREAK AND LIKELY PEAK AT A NEPTUNE MASS}}},
  author = {Suzuki, D. and Bennett, D. P. and Sumi, T. and Bond, I. A. and Rogers, L. A. and Abe, F. and Asakura, Y. and Bhattacharya, A. and Donachie, M. and Freeman, M. and Fukui, A. and Hirao, Y. and Itow, Y. and Koshimoto, N. and Li, M. C. A. and Ling, C. H. and Masuda, K. and Matsubara, Y. and Muraki, Y. and Nagakane, M. and Onishi, K. and Oyokawa, H. and Rattenbury, N. and Saito, To. and Sharan, A. and Shibai, H. and Sullivan, D. J. and Tristram, P. J. and Yonehara, A.},
