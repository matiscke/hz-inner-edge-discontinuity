  number = {2},
  pages = {101},
  publisher = {{IOP Publishing}},
  issn = {1538-4357},
  doi = {10.3847/1538-4357/aac6d5},
  abstract = {We constrain the intrinsic architecture of Kepler planetary systems by modeling the observed multiplicities of the transiting planets (tranets) and their transit timing variations (TTVs). We robustly determine that the fraction of Sun-like stars with Kepler-like planets, \$\textbackslash backslasheta\_\{\textbackslash backslashrm Kepler\}\$, is \$30\textbackslash backslashpm3\textbackslash backslash\%\$. Here Kepler-like planets are planets that have radii \$R\_\{\textbackslash backslashrm p\} \textbackslash backslashgtrsim R\_\textbackslash backslashoplus\$ and orbital periods \$P\textbackslash textless400\${$\sim$}days. Our result thus significantly revises previous claims that more than 50\$\textbackslash backslash\$\% of Sun-like stars have such planets. Combining with the average number of Kepler planets per star (\$\textbackslash backslashsim0.9\$), we obtain that on average each planetary system has \$3.0\textbackslash backslashpm0.3\$ planets within 400 days. We also find that the dispersion in orbital inclinations of planets within a given planetary system, \$\textbackslash backslashsigma\_\{i,k\}\$, is a steep function of its number of planets, \$k\$. This can be parameterized as \$\textbackslash backslashsigma\_\{i,k\}\textbackslash backslashpropto k\^\textbackslash backslashalpha\$ and we find that \$-4\textbackslash textless\textbackslash backslashalpha\textbackslash textless-2\$ at 2-\$\textbackslash backslashsigma\$ level. Such a distribution well describes the observed multiplicities of both tranets and TTVs with no excess of single tranets. Therefore we do not find evidence supporting the so-called "Kepler dichotomy." Together with a previous study on orbital eccentricities, we now have a consistent picture: the fewer planets in a system, the hotter it is dynamically. We discuss briefly possible scenarios that lead to such a trend. Despite our Solar system not belonging to the Kepler club, it is interesting to notice that the Solar system also has three planets within 400 days and that the inclination dispersion is similar to Kepler systems of the same multiplicity.},
  keywords = {general,methods,occurrence,statistical,superEarths},
  annotation = {\_eprint: 1802.09526}
}

@article{Zhu2018b,
  title = {The {{Super Earth-Cold Jupiter Relations}}},
