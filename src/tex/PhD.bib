@article{Teague2018a,
  title = {A {{Kinematical Detection}} of {{Two Embedded Jupiter-mass Planets}} in {{HD}} 163296},
  author = {Teague, Richard and Bae, Jaehan and Bergin, Edwin A. and Birnstiel, Tilman and {Foreman-Mackey}, Daniel},
