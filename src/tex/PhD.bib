@article{Petigura2018a,
  title = {The {{California- Kepler Survey}}. {{IV}}. {{Metal-rich Stars Host}} a {{Greater Diversity}} of {{Planets}}},
  author = {Petigura, Erik A and Marcy, Geoffrey W and Winn, Joshua N and Weiss, Lauren M and Fulton, Benjamin J and Howard, Andrew W and Sinukoff, Evan and Isaacson, Howard and Morton, Timothy D and Johnson, John Asher},
  year = {2018},
  journal = {The Astronomical Journal},
  volume = {155},
