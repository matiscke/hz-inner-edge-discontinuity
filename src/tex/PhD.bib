@article{Ferraz-Mello2008a,
  title = {Tidal Friction in Close-in Satellites and Exoplanets: {{The Darwin}} Theory Re-Visited},
  author = {{Ferraz-Mello}, Sylvio and Rodr{\'i}guez, Adri{\'a}n and Hussmann, Hauke},
  year = {2008},
