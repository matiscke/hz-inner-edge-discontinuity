@article{Molaverdikhani2019c,
  title = {From {{Cold}} to {{Hot Irradiated Gaseous Exoplanets}}: {{Toward}} an {{Observation-based Classification Scheme}}},
  author = {Molaverdikhani, Karan and Henning, Thomas and Molli{\`e}re, Paul},
