}

@article{Flock2016a,
  title = {Radiation {{Hydrodynamics Models}} of the {{Inner Rim}} in {{Protoplanetary Disks}}},
  author = {Flock, M. and Fromang, S. and Turner, N. J. and Benisty, M.},
