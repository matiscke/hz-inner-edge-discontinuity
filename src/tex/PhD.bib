@misc{Podolak2019a,
  title = {Detailed Calculations of the Efficiency of Planetesimal Accretion in the Core-Accretion Model},
  author = {Podolak, Morris and Haghighipour, Nader and Bodenheimer, Peter and Helled, Ravit and Podolak, Esther},
  year = {2019},
  journal = {arXiv},
