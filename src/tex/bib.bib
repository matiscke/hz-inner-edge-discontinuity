  author = {Kordopatis, G. and Schultheis, M. and McMillan, P. J. and Palicio, P. A. and {de Laverny}, P. and {Recio-Blanco}, A. and Creevey, O. and {\'A}lvarez, M. A. and Andrae, R. and Poggio, E. and Spitoni, E. and Contursi, G. and Zhao, H. and {Oreshina-Slezak}, I. and Ordenovic, C. and Bijaoui, A.},
