@article{Sozzetti2014,
  title = {Astrometric Detection of Giant Planets around Nearby {{M}} Dwarfs: The {{Gaia}} Potential},
  shorttitle = {Astrometric Detection of Giant Planets around Nearby {{M}} Dwarfs},
  author = {Sozzetti, A. and Giacobbe, P. and Lattanzi, M. G. and Micela, G. and Morbidelli, R. and Tinetti, G.},
