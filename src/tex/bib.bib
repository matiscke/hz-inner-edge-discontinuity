@article{Wurzbacher2011,
  title = {Separation of {{CO2}} from Air by Temperature-Vacuum Swing Adsorption Using Diamine-Functionalized Silica Gel},
  author = {Wurzbacher, Jan Andre and Gebald, Christoph and Steinfeld, Aldo},
  year = {2011},
