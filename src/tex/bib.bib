@article{Pascucci2018a,
  title = {A {{Universal Break}} in the {{Planet-to-star Mass-ratio Function}} of \$\textbackslash less\$i\$\textbackslash greater\${{Kepler}}\$\textbackslash less\$/I\$\textbackslash greater\$ {{MKG Stars}}},
  author = {Pascucci, Ilaria and Mulders, Gijs D. and Gould, Andrew and Fernandes, Rachel},
