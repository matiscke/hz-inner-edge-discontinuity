  shorttitle = {{{RV-detected}} Planets around {{M}} Dwarfs},
  author = {Schlecker, Martin and Burn, Remo and Sabotta, Silvia and Seifert, Antonia and Henning, Thomas and Emsenhuber, Alexandre and Mordasini, Christoph and Reffert, Sabine and Shan, Yutong and Klahr, Hubert},
