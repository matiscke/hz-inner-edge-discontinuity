@article{Ataiee2021,
  title = {Pushing Planets into an Inner Cavity by a Resonant Chain},
  author = {Ataiee, S. and Kley, W.},
  year = {2021},
  month = apr,
  journal = {Astronomy \& Astrophysics},
  volume = {648},
  eprint = {2102.08612},
